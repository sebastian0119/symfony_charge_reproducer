{% use 'tailwind_2_layout.html.twig' %}

{%- block form_row -%}
    {%- set row_class = row_class|default('max-w-xl') -%}
    {{- parent() -}}
{%- endblock form_row -%}

{%- block checkbox_widget -%}
    {%- set widget_class = widget_class|default('rounded mr-2') -%}
    {{- parent() -}}
{%- endblock checkbox_widget -%}

{%- block widget_attributes -%}
    {%- set widget_class = widget_class|default('w-full rounded-md') -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block form_label -%}
    {%- set label_class = label_class|default('font-semibold') -%}
    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        {% if compound %}
            {# TODO: set background color back to bg-red-100 when there is clarity about location of error messages #}
            <div class="not-prose bg-green-100 border-l-4 border-red-500 text-red-700 px-4 py-2" role="alert">
            {%- for error in errors -%}
                <p class="{{ error_item_class|default('text-red-700') }}"><b>{% trans %}app.error.check{% endtrans %}:</b> {{ error.message }}</p>
            {%- endfor -%}
            </div>
        {% else %}
            <div class="not-prose bg-red-100 border-l-4 border-red-500 text-red-700 px-4 py-2" role="alert">
            {%- for error in errors -%}
                <p class="{{ error_item_class|default('text-red-700') }}"><b>{% trans %}app.error.check{% endtrans %}:</b> {{ error.message }}</p>
            {%- endfor -%}
            </div>
        {% endif %}
    {%- endif -%}
{%- endblock form_errors -%}

